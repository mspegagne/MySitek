                type: "POST",
                url: '/admin/install',
                data: {type: "modules", file: "2048"},
                beforeSend: function() {
                    $('#wait2048').show();
                },
                success: function() {
                    $('#wait2048').hide();
                },
                error: function(request, error) { // Info Debuggage si erreur         
                    alert("Erreur : responseText: " + request.responseText);
                }

            })
                    .done(function(msg) {
                        if (msg === '') {
